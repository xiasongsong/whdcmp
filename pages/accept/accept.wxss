.accept {
  padding-bottom: 50rpx;
}

.section {
  background: #fff;
  margin: 30rpx 0;
  padding-top: 10rpx;
}
.accept .section:first-child{
  margin-top: 0;
}

.section .flex {
  min-height: 96rpx;
  font-size: 28rpx;
  align-items: center;
  padding: 0 30rpx;
}

.section .flex .fh {
  width: 150rpx;
  font-weight: 200;
}

.section .flex .fb {
  flex: 1;
}

.section .flex .fb input {
  width: 100%;
  height: 70rpx;
  border-bottom: 1px solid #ddd;
  text-align: right;
  padding:0 30rpx;
}

.section .flex .icon {
  display: block;
  width: 36rpx;
  height: 36rpx;
}

.section .picker .fb {
  text-align: right;
}
.section .picker .fb input{
  border-bottom: none;
}
.section.padding{
  padding: 30rpx;
}
.section .title {
  font-size: 28rpx;
  color: #333;
  font-weight: 200;
}
.signImage{
  width:100%;
  height: 200rpx;
  display: block;
  margin: 30rpx auto;
}
.submit{
  background: #004294;
  color: #fff;
  margin:70rpx auto 0;
  width: 92%;
}
.placehold{
  font-size: 28rpx;
  color: #333;
  font-weight: 200;
  text-align: center;
  padding: 100rpx 0;
}